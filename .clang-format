---
# Clang-Format Configuration - Optimized for Proto and C++
# Security & Readability Focused Style
Language: Proto
BasedOnStyle: Google

# Layout and Alignment
ColumnLimit: 120
IndentWidth: 2
ContinuationIndentWidth: 4
AccessModifierOffset: -2

# Alignment - Balanced for clean Git diffs
AlignAfterOpenBracket: Align
AlignConsecutiveAssignments: false # Changed to false to prevent massive diff noise
AlignConsecutiveDeclarations: false 
AlignEscapedNewlines: Right
AlignOperands: true
AlignTrailingComments: true

# Breaking and Wrapping
AllowAllParametersOfDeclarationOnNextLine: true
AllowShortBlocksOnASingleLine: true
AllowShortCaseLabelsOnASingleLine: false
AllowShortFunctionsOnASingleLine: Empty
AllowShortIfStatementsOnASingleLine: false
AllowShortLoopsOnASingleLine: false

# Braces Management
BreakBeforeBraces: Attach
BraceWrapping:
  AfterClass: false
  AfterControlStatement: false
  AfterEnum: false
  AfterFunction: false
  AfterNamespace: false
  AfterObjCDeclaration: false
  AfterStruct: false
  AfterUnion: false
  AfterExternBlock: false
  BeforeCatch: false
  BeforeElse: false
  IndentBraces: false
  SplitEmptyFunction: true
  SplitEmptyRecord: true
  SplitEmptyNamespace: true

# Penalty Settings - Tuned for optimal line distribution
PenaltyBreakAssignment: 20
PenaltyBreakBeforeFirstCallParameter: 100
PenaltyBreakComment: 300
PenaltyBreakString: 1000
PenaltyExcessCharacter: 100
PenaltyReturnTypeOnItsOwnLine: 60

# Specifics for Modern Protocols
Standard: Cpp11
UseTab: Never
TabWidth: 2
PointerAlignment: Right
ReflowComments: true
SortIncludes: true
SortUsingDeclarations: true

# Protocol Buffer Specific Alignment
SpaceBeforeAssignmentOperators: true
SpaceBeforeParens: ControlStatements
SpacesInAngles: false
SpacesInParentheses: false
SpacesInSquareBrackets: false

# Clean Namespace handling
FixNamespaceComments: true
CompactNamespaces: false

# Documentation and Pragmas
CommentPragmas: "^ IWYU pragma:"
IncludeBlocks: Preserve
---
